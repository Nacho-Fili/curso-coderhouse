{
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "prettier",
    "react"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "no-console": "warn",
    "no-use-before-define": "warn",
    "spaced-comment": "warn",
    "react/prop-types": [
      0
    ],
    "react/react-in-jsx-scope": 0,
    "prettier/prettier": [
      "error",
      {
        "printWidth": 100,
        "trailingComma": "all",
        "tabWidth": 2,
        "semi": true,
        "singleQuote": false,
        "bracketSpacing": false,
        "arrowParens": "always",
        "endOfLine": "auto"
      }
    ]
  },
  "extends": [
    "standard",
    "plugin:prettier/recommended",
    "plugin:react/recommended"
  ]
}